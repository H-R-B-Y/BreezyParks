{% extends "nonZetaTemplate.html.jinja" %}
{%  block extraHead %}
  <link rel="stylesheet" href="{{ url_for('static', filename='regis.css') }}">
  <script src="{{ url_for('static', filename='registerScript.js')}}"></script>
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" defer></script>
{% endblock %}
{% block body %}
  <div class="registerForm">
    <form method="POST" id="regisForm">
      <label for="username">Username:</label>
      <input type="text" name="username" required><br><br>
      <label for="email">Email Address:</label>
      <input type="text" id="email" name="email" required><br><br>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required><br><br>
      <div class="cf-turnstile" data-sitekey="{{ conf['cfSiteKey'] }}" data-theme="light"></div><br><br>
      <input type="submit" value="Register">
    </form>
    <div id="errorDiv"></div>
  </div>
{% endblock %}