<!DOCTYPE html>
<html lang="en">
<head>
  {% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %} Title {% endblock %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='main.css') }}"/>
    <script src="https://pixijs.download/release/pixi.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.4/socket.io.min.js"></script>
  {% endblock %}
  {% block extraHead %}{% endblock %}
</head>
  <body style="background-color: #464a4a;">

    {% block background%}
    {% if current_user.is_authenticated %}
      <div class="background">
        <canvas id="zetaCanvas" data-userid="{{ current_user.username }}"></canvas>
        <!-- <script src="{{ url_for('static', filename='zetaMainRev2.js')}}"></script> -->
        <script src="{{ url_for('static', filename='zetaSocketIO.js')}}"></script>
      </div>
    {% endif %}
    {% endblock %}

    {% block foreground %}
      <div class="foreground">
        {% include "partials/flash.html" %}

        {% block header %} {% include "partials/header.html" %} {% endblock %}
        <div class="bodyContent">
        {% block body %}
            <div id="main">
              <p>Hello World</p>
            </div>
        {% endblock %}
        </div>


        {% block footer %} {% include "partials/footer.html" %}  {% endblock %}
      </div> 
    {% endblock %}
  </body>
</html>
